{
  "title": "Example Login Flow",
  "steps": [
    {
      "type": "setViewport",
      "width": 1280,
      "height": 720,
      "deviceScaleFactor": 1,
      "isMobile": false,
      "hasTouch": false,
      "isLandscape": false
    },
    {
      "type": "navigate",
      "url": "https://example.com/login",
      "assertedEvents": [
        {
          "type": "navigation",
          "url": "https://example.com/login",
          "title": "Login - Example"
        }
      ]
    },
    {
      "type": "click",
      "selectors": [
        ["aria/Email[role=\"textbox\"]"],
        ["#email-input"],
        ["body > div.app > main > form > div:nth-child(1) > input"]
      ],
      "offsetX": 100,
      "offsetY": 14
    },
    {
      "type": "change",
      "selectors": [
        ["aria/Email[role=\"textbox\"]"],
        ["#email-input"],
        ["body > div.app > main > form > div:nth-child(1) > input"]
      ],
      "value": "user@example.com"
    },
    {
      "type": "click",
      "selectors": [
        ["aria/Password[role=\"textbox\"]"],
        ["[data-testid=\"password-field\"]"],
        ["body > div.app > main > form > div:nth-child(2) > input"]
      ],
      "offsetX": 100,
      "offsetY": 14
    },
    {
      "type": "change",
      "selectors": [
        ["aria/Password[role=\"textbox\"]"],
        ["[data-testid=\"password-field\"]"],
        ["body > div.app > main > form > div:nth-child(2) > input"]
      ],
      "value": "secretpass123"
    },
    {
      "type": "click",
      "selectors": [
        ["aria/Sign in[role=\"button\"]"],
        ["text/Sign in"],
        ["body > div.app > main > form > button.btn-primary.sc-aBcDe_12345"]
      ],
      "offsetX": 60,
      "offsetY": 15,
      "assertedEvents": [
        {
          "type": "navigation",
          "url": "https://example.com/dashboard",
          "title": "Dashboard - Example"
        }
      ]
    },
    {
      "type": "hover",
      "selectors": [
        ["aria/User Menu[role=\"button\"]"],
        ["#user-menu-btn"]
      ]
    },
    {
      "type": "keyDown",
      "key": "Escape"
    },
    {
      "type": "keyUp",
      "key": "Escape"
    },
    {
      "type": "scroll",
      "x": 0,
      "y": 300
    },
    {
      "type": "customStep",
      "name": "verify dashboard loaded",
      "parameters": {}
    }
  ]
}
